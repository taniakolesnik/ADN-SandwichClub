<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <!-- Image -->
        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <!-- Place of origin -->
        <LinearLayout style="@style/sandwich_details_layouts_style">
            <TextView
                android:id="@+id/origin_label_tv"
                style="@style/sandwich_details_field_name_style"
                android:text="@string/detail_place_of_origin_label" />

            <TextView
                android:id="@+id/origin_tv"
                style="@style/sandwich_details_values_field_style" />
        </LinearLayout>

        <!-- Also known as -->
        <LinearLayout
            style="@style/sandwich_details_layouts_style">
            <TextView
                android:id="@+id/also_known_label_tv"
                style="@style/sandwich_details_field_name_style"
                android:text="@string/detail_also_known_as_label" />

            <TextView
                android:id="@+id/also_known_tv"
                style="@style/sandwich_details_values_field_style" />
        </LinearLayout>

        <!-- Ingredients -->
        <LinearLayout style="@style/sandwich_details_layouts_style">
            <TextView
                style="@style/sandwich_details_field_name_style"
                android:text="@string/detail_ingredients_label" />

            <TextView
                android:id="@+id/ingredients_tv"
                style="@style/sandwich_details_values_field_style" />
        </LinearLayout>

        <!-- Description -->
        <LinearLayout style="@style/sandwich_details_layouts_style">

            <TextView
                style="@style/sandwich_details_field_name_style"
                android:text="@string/detail_description_label" />

            <TextView
                android:id="@+id/description_tv"
                style="@style/sandwich_details_values_field_style" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>